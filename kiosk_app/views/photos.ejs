<!doctype html>
<html lang='en' class='h-100' data-bs-theme='auto'>
  <head>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <% let title = lang.photos.title %>
    <title><%= title %></title>
    <link href='bootstrap.min.css' rel='stylesheet'>
    <script src='/socket.io/socket.io.js'></script>
    <script src='photos.js'></script>
    <style>
      .container-cam {
        max-width: 800px;
      }
      .btn-mod {
        --bs-btn-padding-y: 1rem;
      }
      .countdown_wrapper {
        display: flex;
        justify-content: center;
        text-align: center;
        align-content: center;
        flex-direction: column;
      }
      .countdown_wrapper h1 {
        font-size: 2000%;
      }
    </style>
  </head>
  <body class='d-flex flex-column h-100'>

    <main class='flex-shrink-0'>
      <%- include('home_button', { url: './', text: lang.home_button }) %>

      <div id='capture' class='container container-cam'>
        <div class='camera'>

          <div class='card text-bg-dark video-wrapper'>
          <video id='video' class='card-img'><%= lang.photos.no_video %></video>
          <div class='card-img-overlay countdown_wrapper'>
            <h1 class='card-title' id='countdown'></h1>
          </div>

        </div>
        </div>
        <div class='row m-5 text-center'>
          <div class='col-7 gap-2 mx-auto'>
            <div class='d-grid col-10 gap-2 mx-auto'>
              <button
              id='take-photo'
              class='btn btn-primary btn-lg btn-mod'
              ><%= lang.photos.take_photo %></button>
              <button
              id='to-review-btn'
              class='btn btn-primary btn-lg btn-mod'
              ><%= lang.photos.to_review %></button>
              <button
              id='rotate-camera'
              class='btn btn-primary btn-lg btn-mod'
              style='display: none;'
              ><%= lang.photos.rotate %></button>
            </div>
          </div>
        </form>
          <div class='col-5'>
            <a href='' id='to-review'>
              <img id='thumbnail' class='img-fluid' src='placeholder_image.jpg'/>
            </a>
          </div>
        </div>
      </div>

      <div id='review' class='container container-cam' hidden>
        <div class='camera'>
            <img id='photo' class='img-fluid' src='placeholder_image.jpg'/>
        </div>
        <div class='d-grid gap-2 row-gap-100 col-8 mx-auto'>
          <div class='my-5'>
            <form id='email-form'>
            <input type='email' class='form-control' id='email' placeholder='<%= lang.photos.email_address %>'>
            <button
            id='send-photo'
            class='btn btn-primary btn-lg mt-3'
            ><%= lang.photos.send_email %></button>
            </form>
            <p
            id='email-sent-msg'
            style='display: none;'
            ><%= lang.photos.email_sent %></p>
          </div>
          <button
          id='to-camera'
          class='btn btn-primary btn-lg mx-5 btn-mod'
          ><%= lang.photos.to_camera %></button>
        </div>
      </div>

    </main>
  </body>
</html>
